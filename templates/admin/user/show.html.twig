{% extends 'base.html.twig' %}


{% block title %}User{% endblock %}

{% block body %}
<style>
    h1{
        text-align:center;
        font-size:50px;
        padding-top:10%;
        color:#8f8f8f;
    }

    .gestion_button{
        display:inline;
    }

    .gestion_button button{
        margin-right:1%;
        margin-bottom:1%;
    }
</style>

<div class="container">
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Login</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ include('admin/user/roles_pills.html.twig', { roles: user.roles }) }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

<div class= "gestion_button">
    <button class= "btn btn-primary" href="{{ path('admin_user_index') }}">back to list</button>

    <button class= "btn btn-primary" href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</button>

    {{ include('admin/user/_delete_form.html.twig') }}
</div>
</div>
{% endblock %}
