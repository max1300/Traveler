{% extends 'base.html.twig' %}

{% block title %}Voyages{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ voyage.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ voyage.description }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ voyage.texte }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{% for photo in voyage.photo %}
                    <img src="{{ asset('uploads/photos/' ~ photo.filePath) | imagine_filter('squared_thumbnail_small')}}">
                {% endfor %}
                </td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('admin_voyage_index') }}">back to list</a>

    <a href="{{ path('admin_voyage_edit', {'id': voyage.id}) }}">edit</a>

    {{ include('admin/voyage/_delete_form.html.twig') }}
{% endblock %}