{% extends 'base.html.twig' %}

{% block title %}Voyages{% endblock %}

{% block body %}
<style>
    h1{
        text-align:center;
        font-size:50px;
        padding-top:10%;
        color:#8f8f8f;
    }

    .gestion_button{
        display:inline;
    }

    .gestion_button button{
        margin-right:1%;
        margin-bottom:1%;
    }
</style>

<div class="container">
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ voyage.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ voyage.description }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ voyage.texte }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{% for photo in voyage.photo %}
                    <img src="{{ asset('uploads/photos/' ~ photo.filePath) | imagine_filter('squared_thumbnail_small')}}">
                {% endfor %}
                </td>
            </tr>
            
        </tbody>
    </table>

    <div class= "gestion_button">
    <button class= "btn btn-primary"> <a href="{{ path('admin_voyage_index') }}">back to list</a></button>

    <button class= "btn btn-primary"> <a href="{{ path('admin_voyage_edit', {'id': voyage.id}) }}">edit</a></button>

    {{ include('admin/voyage/_delete_form.html.twig') }}

</div>
</div>
{% endblock %}