<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://bootswatch.com/4/sandstone/bootstrap.min.css">
        {% endblock %}
    </head>

    <body>
        

        {% block nav %}
         <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{path('home')}}">TRAVELER</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{path('home')}}">Accueil</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_voyage_index') }}">Voyage</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('admin_destinations_index')}}">Destination</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('admin_user_index')}}">User</a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_login')}}">Connexion</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_logout')}}">Deconnexion</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
        <style>
            .footer {
              position: fixed;
              left: 0;
              bottom: 0;
              width: 100%;
              height:4%;
              background-color: rgba(0, 0, 0, 0.514);
              color: white;
            }
            .footer p{
                color: white;
                font-size: 20px;
            }
            /* Facebook */
            .fa-facebook {
                padding-left: 2%;
                color: white;
                text-decoration: none;
            }
            /* Twitter */
            .fa-twitter {
                padding-left: 1%;
                color: white;
                text-decoration: none;
            }
            </style>
        <div class="footer">
            <p>
                
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-twitter"></a>
            </p>
        </div
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
